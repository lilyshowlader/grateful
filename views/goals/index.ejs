<link rel="stylesheet" href="/stylesheets/style.css" />

<main>
  <p id="logo">what makes me happy<span id='period'>.</span></p>
  <table>
    <thead>
      <tr>
        <th>happy things</th>
        <th>date</th>
      </tr>
    </thead>
  <tbody>
    <% happys.forEach(happy => { %>
      <tr>
        <td><%= happy.description %></td>
        <td><%= happy.date %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

  <p id="logo">goals<span id='period'>.</span></p>
  <table>
    <thead>
      <tr>
        <th>goals</th>
        <th>date</th>
        <th>details</th>
      </tr>
    </thead>
  <tbody>
    <% goals.forEach(goal => { %>
      <tr>
        <td><%= goal.goalDescription %></td>
        <td><%= goal.date %></td>
        <td><a href="/goals/<%= goal._id %>">details</a></td>
      </tr>
    <% }) %>
  </tbody>
</table>
</main>